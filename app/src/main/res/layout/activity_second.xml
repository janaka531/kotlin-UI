<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity"
        android:background="@drawable/bg"
>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="385dp" android:layout_alignParentBottom="true" android:layout_marginBottom="-79dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="5dp" android:layout_marginEnd="5dp"
            android:background="@color/colorPrimary"/>
    <EditText
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="@color/whiteText"
            android:outlineSpotShadowColor="@color/whiteText"
            android:outlineAmbientShadowColor="@color/whiteText"
            android:ems="10"
            android:id="@+id/editText2" android:layout_alignParentBottom="true" android:layout_marginBottom="229dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="74dp" android:layout_marginEnd="74dp" android:textStyle="bold"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:hint="User Name"/>
    <EditText
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="@color/whiteText"
            android:ems="10"
            android:id="@+id/editText4" android:layout_alignParentBottom="true" android:layout_marginBottom="161dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="75dp" android:layout_marginEnd="75dp" android:hint="Password"/>
    <Button
            android:text="LOGIN WITH FACEBOOK"
            android:layout_width="247dp"
            android:layout_height="58dp" android:id="@+id/button" android:layout_alignParentBottom="true"
            android:layout_marginBottom="79dp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="81dp" android:layout_marginEnd="81dp"
            android:background="@drawable/custom_button"
            android:textColor="@color/whiteText"
            android:outlineAmbientShadowColor="@color/whiteText"

    />
    <ImageView
            android:layout_width="121dp"
            android:layout_height="121dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView"
            android:layout_alignParentBottom="true" android:layout_marginBottom="461dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="154dp" android:layout_marginEnd="154dp"/>
    <TextView
            android:text="CREATE"
            android:layout_width="138dp"
            android:layout_height="41dp" android:id="@+id/textView" android:layout_alignParentBottom="true"
            android:layout_marginBottom="410dp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="46dp" android:layout_marginEnd="46dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="135dp" android:layout_marginStart="135dp"
            android:layout_alignParentLeft="true" android:textSize="30sp" android:textColor="@color/colorPrimary"
            app:fontFamily="sans-serif-medium" android:typeface="serif"/>
    <TextView
            android:text="SIGN UP"
            android:layout_width="97dp"
            android:layout_height="42dp" android:id="@+id/signupText" android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="152dp" android:layout_marginEnd="152dp"
            app:fontFamily="serif" android:textSize="18sp" android:textColor="@color/whiteText"/>
</RelativeLayout>