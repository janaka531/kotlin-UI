<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity"
        android:background="@drawable/bg"
>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="385dp" android:layout_alignParentBottom="true" android:layout_marginBottom="-49dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="3dp" android:layout_marginEnd="3dp"
            android:background="@color/colorPrimary"/>
    <EditText
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="@color/whiteText"
            android:outlineSpotShadowColor="@color/whiteText"
            android:outlineAmbientShadowColor="@color/whiteText"
            android:ems="10"
            android:id="@+id/editText2" android:layout_alignParentBottom="true" android:layout_marginBottom="221dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="86dp" android:layout_marginEnd="86dp" android:textStyle="bold"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:hint="User Name"/>
    <EditText
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="@color/whiteText"
            android:ems="10"
            android:id="@+id/editText4" android:layout_alignParentBottom="true" android:layout_marginBottom="153dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="86dp" android:layout_marginEnd="86dp" android:hint="Password"/>
    <Button
            android:text="LOGIN"
            android:layout_width="227dp"
            android:layout_height="wrap_content" android:id="@+id/button" android:layout_alignParentBottom="true"
            android:layout_marginBottom="81dp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="103dp" android:layout_marginEnd="103dp"
            android:background="@drawable/custom_button"
            android:textColor="@color/whiteText"
            android:outlineAmbientShadowColor="@color/whiteText"

    />
    <ImageView
            android:layout_width="121dp"
            android:layout_height="121dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView"
            android:layout_alignParentBottom="true" android:layout_marginBottom="503dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="159dp" android:layout_marginEnd="159dp"/>
    <TextView
            android:text="CREATE"
            android:layout_width="122dp"
            android:layout_height="wrap_content" android:id="@+id/textView" android:layout_alignParentBottom="true"
            android:layout_marginBottom="454dp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="159dp" android:layout_marginEnd="159dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="129dp" android:layout_marginStart="129dp"
            android:layout_alignParentLeft="true" android:textSize="30sp" android:textColor="@color/colorPrimary"
            app:fontFamily="sans-serif-medium" android:typeface="serif"/>
</RelativeLayout>